#!/usr/bin/env bash
if pgrep -x rofi >/dev/null; then
	pkill rofi
else
	rofi \
		-show drun \
		-modi drun,run \
		-scroll-method 0 \
		-drun-match-fields all \
		-drun-display-format "{name}" \
		-no-drun-show-actions \
		-terminal alacritty \
		-kb-cancel Escape \
		-theme "$HOME"/.config/rofi/config/launcher.rasi
fi
